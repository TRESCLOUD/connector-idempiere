<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="idempiere_synchronizer_so_connection_parameter_setting_list">
      <field name="name">idempiere_synchronizer_so_connection_parameter_setting list</field>
      <field name="model">idempiere_synchronizer_so.connection_parameter_setting</field>
      <field name="arch" type="xml">
        <tree>
          <field name="idempiere_url"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="idempiere_synchronizer_so_connection_parameter_setting_form">
      <field name="name">idempiere_synchronizer_so_connection_parameter_setting form</field>
      <field name="model">idempiere_synchronizer_so.connection_parameter_setting</field>
      <field name="arch" type="xml">
        <form string="iDempiere Connection Setting">
            <sheet>
                <group name="settings" string="Settings" >
                    <group>
                      <field name="idempiere_url"/>
                      <field name="idempiere_urls"/>
                      <field name="idempiere_login_client_id"/>
                      <field name="idempiere_login_org_id"/>
                    </group>
                    <group>
                      <field name="idempiere_login_role_id"/>
                      <field name="idempiere_login_password"/>
                      <field name="idempiere_login_user"/>
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="idempiere_synchronizer_so_connection_parameter_setting_search">
        <field name="name">idempiere_synchronizer_so_connection_parameter_setting search</field>
        <field name="model">idempiere_synchronizer_so.connection_parameter_setting</field>
        <field name="arch" type="xml">
            <search>
                <field name="idempiere_url"/>
            </search>
        </field>
    </record>

        <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="idempiere_synchronizer_so_connection_parameter_setting_action_window">
      <field name="name">Connection Parameter Setting window</field>
      <field name="res_model">idempiere_synchronizer_so.connection_parameter_setting</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="idempiere_synchronizer_so_connection_parameter_setting_search" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create the first Connection Parameter Setting
        </p>
      </field>

    </record>

    <!-- actions -->
    <menuitem name="Connection" id="idempiere_synchronizer_so.conecction_parameter_setting" parent="idempiere_synchronizer_so.setting"
              action="idempiere_synchronizer_so_connection_parameter_setting_action_window"/>

  </data>
</odoo>