<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_country_idempiere_form" model="ir.ui.view">
	        <field name="name">res.country.idempiere.form</field>
	        <field name="model">res.country</field>
	        <field name="inherit_id" ref="base.view_country_form"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//field[@name='code']" position="after">
	        		<field name="C_Country_ID"/>
	        	</xpath>
	        </field>
        </record>
        
        <record id="res_country_state_idempiere_form" model="ir.ui.view">
	        <field name="name">res.country.state.idempiere.form</field>
	        <field name="model">res.country.state</field>
	        <field name="inherit_id" ref="base.view_country_state_form"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//field[@name='country_id']" position="after">
	        		<field name="C_Region_ID"/>
	        	</xpath>
	        </field>
        </record>
	</data>
</odoo>
